{
   "manifest_version": 2,
   "background": {
     "page": "background.html",
     "persistent": false
   },
   "browser_action": {
      "default_icon": "icon64.png",
      "default_title": "Create Link",
      "default_popup": "popup.html"
   },
   "description": "Copy current page URL to clipboard in various formats.",
   "icons": {
      "128": "icon128.png",
      "16": "icon16.png",
      "32": "icon32.png",
      "64": "icon64.png"
   },
   "name": "Create Link",
   "options_page": "options.html",
   "content_scripts" : [{
     "matches"    : ["http://*/*", "https://*/*"],
     "css"        : [],
     "js"         : [
       "content.js"
     ],
     "run_at"     : "document_end",
     "all_frames" : true
   }],
   "permissions": [ "tabs", "contextMenus" ],
   "version": "0.1.4"
}
